<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OSP_project02.MainPage">

    <StackLayout Margin="0,35,0,0"
             x:Name="stackLayout">
        <Label Text="Notification for 30 minutes of screen time."
           TextColor="white"
           HorizontalOptions="Center"
           VerticalOptions="Start" />
        <Button Text="30 minutes"
            HorizontalOptions="Center"
            VerticalOptions="Start"
            Clicked="OnScheduleClick1" />
        <Label Text="Notification for 1 hour of screen time."
           TextColor="white"
           HorizontalOptions="Center"
           VerticalOptions="Start" />
        <Button Text="1 hour"
            HorizontalOptions="Center"
            VerticalOptions="Start"
            Clicked="OnScheduleClick2" />
        <Label Text="Notification for 2 hours of screen time."
           TextColor="white"
           HorizontalOptions="Center"
           VerticalOptions="Start" />
        <Button Text="2 hour"
            HorizontalOptions="Center"
            VerticalOptions="Start"
            Clicked="OnScheduleClick3" />
    </StackLayout>

</ContentPage>


